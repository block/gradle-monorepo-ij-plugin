<idea-plugin>
  <id>xyz.block.gradle-monorepo</id>
  <version>PLUGIN_VERSION</version>
  <name>gradle-monorepo</name>
  <description>Improves the developer experience working in a gradle monorepo project</description>
  <vendor url="https://block.xyz/">Block</vendor>
  <depends>com.intellij.modules.platform</depends>
  <extensions defaultExtensionNs="com.intellij">
    <directoryIndexExcludePolicy
        implementation="xyz.block.tools.monorepo.idea.InactiveProjectExcludeDirPolicy" />
  </extensions>
<!--  <applicationListeners>-->
<!--    &lt;!&ndash;<listener class="xyz.block.tools.monorepo.idea.FilesUpdateListener" topic="com.intellij.openapi.vfs.newvfs.BulkFileListener"/>&ndash;&gt;-->
<!--  </applicationListeners>-->
  <projectListeners>
    <listener class="xyz.block.tools.monorepo.idea.FilesUpdateListener" topic="com.intellij.openapi.vfs.newvfs.BulkFileListener"/>
  </projectListeners>
</idea-plugin>